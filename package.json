{
  "name": "arduino-webcli",
  "private": "true",
  "version": "0.4.0",
  "author": {
    "name": "Yeqin Gong",
    "email": "yeqin.gong@qq.com"
  },
  "main": "dist/index.js",
  "scripts": {
    "dev": "GUI_PORT=18125 bun --watch src/start.js",
    "gui": "GUI_PORT=15816 NODE_ENV=production bun src/start.js",
    "start": "NODE_ENV=production pm2 start src/start.js",
    "start2": "bun run start -- -i 2",
    "stop": "pm2 stop start && pm2 delete start",
    "list": "pm2 list",
    "build": "NODE_ENV=production bun build --entrypoints src/service.js --entry-naming index.js --outdir dist --target node --format cjs",
    "postinstall": "bun run build && bun arduino/install.js"
  },
  "devDependencies": {
    "@types/bun": "latest"
  },
  "dependencies": {
    "@elysiajs/cors": "^1.4.0",
    "@elysiajs/html": "^1.4.0",
    "cross-spawn": "^7.0.6",
    "elysia": "^1.4.12",
    "pm2": "^6.0.13"
  }
}
